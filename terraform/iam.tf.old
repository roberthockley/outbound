resource "aws_iam_role" "RoleForPolly" {
  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "lambda.amazonaws.com"
        }
      }
    ]
  })
  description = "Allows Lambda functions to call AWS services on your behalf."
  name        = "RoleForPolly"
}

resource "aws_iam_role_policy_attachment" "RoleForPolly_AmazonDynamoDBFullAccess" {
  depends_on = [aws_iam_role.RoleForPolly]
  policy_arn = "arn:aws:iam::aws:policy/AmazonDynamoDBFullAccess"
  role       = "RoleForPolly"
}

resource "aws_iam_role_policy_attachment" "RoleForPolly_AmazonPollyReadOnlyAccess" {
  depends_on = [aws_iam_role.RoleForPolly]
  policy_arn = "arn:aws:iam::aws:policy/AmazonPollyReadOnlyAccess"
  role       = "RoleForPolly"
}

resource "aws_iam_role_policy_attachment" "RoleForPolly_CloudWatchLogsFullAccess" {
  depends_on = [aws_iam_role.RoleForPolly]
  policy_arn = "arn:aws:iam::aws:policy/CloudWatchLogsFullAccess"
  role       = "RoleForPolly"
}
